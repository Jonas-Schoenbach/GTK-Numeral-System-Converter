<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp3.1</TargetFramework>
        <RuntimeIdentifier>linux-x64</RuntimeIdentifier>
        <PublishTrimmed>True</PublishTrimmed>
        <PublishSingleFile>True</PublishSingleFile>
        <OutputType>WinExe</OutputType>
        <AssemblyName>Numeral System Converter</AssemblyName>
        <RootNamespace>NumeralSystemConverter</RootNamespace>
        <PackageId />
        <Title>Numeral System Converter</Title>
        <Authors>Jonas Sch√∂nbach</Authors>
        <Company />
        <Product>Numeral System Converter</Product>
    </PropertyGroup>

    <ItemGroup>
        <None Remove="**\*.glade" />
        <EmbeddedResource Include="**\*.glade">
            <LogicalName>%(Filename)%(Extension)</LogicalName>
        </EmbeddedResource>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="GtkSharp" Version="3.22.25.*" />
    </ItemGroup>

</Project>
